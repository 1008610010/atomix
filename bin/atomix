#!/bin/bash

command=${1:-""}
case "$command" in
"build")
    mvn clean package
    ;;
"cli")
    shift
    python ${ATOMIX_ROOT}/cli/main.py "$@"
    ;;
"agent")
    shift
    java -jar ${ATOMIX_ROOT}/agent/target/atomix-agent.jar "$@"
    ;;
"test")
    shift
    python ${ATOMIX_ROOT}/tools/test/main.py "$@"
    ;;
*)
    python ${ATOMIX_ROOT}/cli/main.py "$@"
esac
